<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shop.dao.GoodsMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.domain.po.Goods">
                <id column="goods_id" property="goodsId" />
                <result column="goods_name" property="goodsName" />
                <result column="goods_number" property="goodsNumber" />
                <result column="goods_price" property="goodsPrice" />
                <result column="goods_desc" property="goodsDesc" />
                <result column="add_time" property="addTime" />
                <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
    goods_id, goods_name, goods_number, goods_price, goods_desc, add_time, update_time
    </sql>

    <update id="subtractStock" parameterType="java.lang.Integer">
        update goods set goods_number = goods_number - #{number},update_time = sysdate()  where goods_id = #{goodsId}
    </update>

</mapper>